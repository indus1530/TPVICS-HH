<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tpvics_hh.ui.sections.SectionCHEActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fldGrpSectionCHE"
            style="@style/linearlayout_view_wt_bound">

            <!-- im25  Title   -->
            <!--            <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpCVim25"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/im25" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>-->

            <!-- im26a  TextArea   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVim26a"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/im26a" />

                    <EditText
                        android:id="@+id/im26a"
                        style="@style/EditTextAlpha"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- im26b  TextArea   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVim26b"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/im26b" />

                    <EditText
                        android:id="@+id/im26b"
                        style="@style/EditTextAlpha"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- im26c  TextArea   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVim26c"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/im26c" />

                    <EditText
                        android:id="@+id/im26c"
                        style="@style/EditTextAlpha"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Take Photo   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVtakePhoto"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <LinearLayout
                        style="@style/hlinearlayout"
                        android:gravity="center_horizontal">


                        <Button
                            android:id="@+id/frontPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/outline_btn"
                            android:text="Take Front Photo"
                            android:onClick="takePhoto"
                            android:textColor="@color/greenInfo" />

                        <Button
                            android:id="@+id/backPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="15dp"
                            android:background="@drawable/outline_btn"
                            android:text="Take Back Photo"
                            android:onClick="takePhoto"
                            android:textColor="@color/greenInfo" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/hlinearlayout"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/frontFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#7f7f7f7f"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/backFileName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="#7f7f7f7f"
                            android:textSize="14dp" />


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- im26d  TextArea   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVim26d"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/im26d" />

                    <EditText
                        android:id="@+id/im26d"
                        style="@style/EditTextAlpha"
                        android:ems="10"
                        android:tag="-1"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--ENDBUTTON linearlayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="start"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@color/grayOverlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>