<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tpvics_hh.ui.sections.SectionAActivity" />
    </data>

    <LinearLayout style="@style/linearlayout_view_wt_bound">

        <!-- HEAD   -->
        <TextView
            style="@style/textView3Head"
            android:text="@string/a101a" />

        <ScrollView style="@style/i_scrollview">

            <LinearLayout
                android:id="@+id/fldGrpSectionA"
                style="@style/vlinearlayout">

                <!-- Cluster Check   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/checkPSUcv"
                    style="@style/cardView">

                    <LinearLayout style="@style/vlinearlayout">

                        <!--hh07-->
                        <TextView
                            style="@style/i_textview"
                            android:text="@string/hh07" />

                        <LinearLayout
                            style="@style/hlinearlayout"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/checkHHBtn2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/_2sdp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:onClick="@{() -> callback.BtnCheckHH()}"
                                android:src="@drawable/circle_search" />

                            <EditText
                                android:id="@+id/hh07"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="70"
                                android:hint="@string/hh07"
                                android:maxLength="6" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/fldGrpSectionA01"
                    style="@style/vlinearlayout"
                    android:visibility="gone"
                    tools:visibility="visible">


                    <!-- Province -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hh03cv"
                        style="@style/cardView">

                        <LinearLayout style="@style/hlinearlayout">

                            <!--hh03-->
                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/hh03" />


                            <TextView
                                android:id="@+id/hh03"
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/pink_100"
                                android:gravity="center"
                                android:text="@string/hh03"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- District  -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hh04cv"
                        style="@style/cardView">

                        <LinearLayout style="@style/hlinearlayout">

                            <!--hh04-->
                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/hh04" />


                            <TextView
                                android:id="@+id/hh04"
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/pink_100"
                                android:gravity="center"
                                android:text="@string/hh04"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- Tehsil  -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hh05cv"
                        style="@style/cardView">

                        <LinearLayout style="@style/hlinearlayout">

                            <!--hh05-->
                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/hh05" />


                            <TextView
                                android:id="@+id/hh05"
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/pink_100"
                                android:gravity="center"
                                android:text="@string/hh05"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- Place   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hh06cv"
                        style="@style/cardView">

                        <LinearLayout style="@style/hlinearlayout">

                            <!--hh06-->
                            <TextView
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:text="@string/hh06" />


                            <TextView
                                android:id="@+id/hh06"
                                style="@style/i_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:background="@color/pink_100"
                                android:gravity="center"
                                android:text="@string/hh06"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <!-- HouseHold Check   -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/hh08cv"
                        style="@style/cardView">

                        <LinearLayout style="@style/vlinearlayout">

                            <!--hh08-->
                            <TextView
                                style="@style/i_textview"
                                android:text="@string/hh08" />

                            <LinearLayout style="@style/hlinearlayout">

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/hh08"
                                    style="@style/textInput"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:hint="#-####-###"
                                    android:inputType="textCapCharacters"
                                    android:textDirection="ltr"
                                    app:mask="#-####-###" />

                                <Button
                                    android:id="@+id/checkHHBtn3"
                                    style="@style/button"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/button_bg"
                                    android:onClick="@{() -> callback.BtnCheckHH()}"
                                    android:text="CHECK"
                                    android:textColor="@color/colorPrimaryDark" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/fldGrpSectionA02"
                        style="@style/vlinearlayout"
                        android:visibility="gone"
                        tools:visibility="visible">


                        <!-- checkHHHeadpresen   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpcih110"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    android:id="@+id/hhName"
                                    style="@style/i_textview"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="@string/checkHHpresent" />

                                <CheckBox
                                    android:id="@+id/checkHHHeadpresent"
                                    style="@style/checkbox"
                                    android:tag="-1"
                                    android:text="@string/checkHHpresent" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- newHHheadname   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpcih110a"
                            style="@style/cardView"
                            android:visibility='@{checkHHHeadpresent.checked? View.GONE : View.VISIBLE}'>

                            <LinearLayout style="@style/hlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="@string/newHHheadname" />

                                <EditText
                                    android:id="@+id/newHHheadname"
                                    style="@style/EditTextAlpha"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:hint="@string/name"
                                    android:maxLength="25"
                                    android:text='@{checkHHHeadpresent.checked ? "" : newHHheadname.getText().toString()}' />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh13a  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpCVa109"
                            style="@style/cardView">

                            <LinearLayout style="@style/hlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="@string/hh13a" />

                                <EditText
                                    android:id="@+id/hh13a"
                                    style="@style/EditTextAlphaNmeric"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:hint="@string/name" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh13b  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpCVa110"
                            style="@style/cardView">

                            <LinearLayout style="@style/hlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/hh13b" />

                                <EditText
                                    android:id="@+id/hh13b"
                                    style="@style/EditTextAlphaNmeric"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:hint="@string/contactnum" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh14  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpCVa111"
                            style="@style/cardView">

                            <LinearLayout style="@style/hlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:text="@string/hh14" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/hh14"
                                    style="@style/EditTextNum"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:hint="@string/year"
                                    android:maxLength="2"
                                    app:maxValue="99"
                                    app:minValue="1"
                                    app:type="range" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh15  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh15cv"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh15" />

                                <RadioGroup
                                    android:id="@+id/hh15"
                                    style="@style/hradiogroup">

                                    <RadioButton
                                        android:id="@+id/hh15a"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh15a" />

                                    <RadioButton
                                        android:id="@+id/hh15b"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh15b" />

                                </RadioGroup>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh16  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh16cv"
                            style="@style/cardView"
                            android:visibility='@{hh15a.checked ? View.VISIBLE : View.GONE }'>

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh16" />

                                <LinearLayout style="@style/hlinearlayout">

                                    <TextView
                                        style="@style/i_textviewhint"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/name" />

                                    <EditText
                                        android:id="@+id/hh16a"
                                        style="@style/EditTextAlpha"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:hint="@string/name"
                                        android:maxLength="30"
                                        android:text='@{hh15a.checked ? hh16a.getText().toString() : "" }' />

                                    <TextView
                                        style="@style/i_textviewhint"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/num" />

                                    <EditText
                                        android:id="@+id/hh16b"
                                        style="@style/EditTextNum"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:hint="@string/contactnum"
                                        android:maxLength="11"
                                        android:text='@{hh15a.checked ? hh16b.getText().toString() : "" }' />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh17  Input   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh17cv"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh17" />

                                <LinearLayout style="@style/hlinearlayout">

                                    <TextView
                                        style="@style/i_textviewhint"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/name" />

                                    <EditText
                                        android:id="@+id/hh17a"
                                        style="@style/EditTextAlpha"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:hint="@string/name"
                                        android:maxLength="30" />

                                    <TextView
                                        style="@style/i_textviewhint"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/num" />

                                    <EditText
                                        android:id="@+id/hh17b"
                                        style="@style/EditTextNum"
                                        android:layout_width="0dp"
                                        android:layout_weight="2"
                                        android:hint="@string/contactnum"
                                        android:maxLength="11" />

                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh18  Radio   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/fldGrpCVhh18"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh18" />

                                <RadioGroup
                                    android:id="@+id/hh18"
                                    style="@style/hradiogroup">

                                    <RadioButton
                                        android:id="@+id/hh18a"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh18a" />

                                    <RadioButton
                                        android:id="@+id/hh18b"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh18b" />

                                </RadioGroup>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh19  Input & Check   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh19cv"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh19" />

                                <TextView
                                    style="@style/i_textviewhint"
                                    android:text="@string/hh19h" />

                                <LinearLayout style="@style/hlinearlayout">

                                    <TextView
                                        style="@style/i_textviewhint"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh19a" />

                                    <com.edittextpicker.aliazaz.EditTextPicker
                                        android:id="@+id/hh19a"
                                        style="@style/EditTextNum"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:enabled='@{hh19b.checked ? false : true}'
                                        android:hint="@string/num"
                                        android:maxLength="2"
                                        android:text='@{hh19b.checked ? "" : hh19a.getText().toString }'
                                        app:maxValue="94"
                                        app:minValue="1"
                                        app:type="range" />

                                </LinearLayout>

                                <CheckBox
                                    android:id="@+id/hh19b"
                                    style="@style/checkbox"
                                    android:tag="-1"
                                    android:text="@string/hh19b" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh20  Radio   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh20cv"
                            style="@style/cardView">

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh20" />

                                <TextView
                                    style="@style/i_textviewhint"
                                    android:text="@string/hh20h" />

                                <RadioGroup
                                    android:id="@+id/hh20"
                                    style="@style/hradiogroup">

                                    <RadioButton
                                        android:id="@+id/hh20a"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh20a" />

                                    <RadioButton
                                        android:id="@+id/hh20b"
                                        style="@style/radiobutton"
                                        android:layout_width="0dp"
                                        android:layout_weight="1"
                                        android:text="@string/hh20b" />

                                </RadioGroup>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <!-- hh21  Radio   -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/hh21cv"
                            style="@style/cardView"
                            android:visibility='@{hh20a.checked ? View.VISIBLE : View.GONE}'>

                            <LinearLayout style="@style/vlinearlayout">

                                <TextView
                                    style="@style/i_textview"
                                    android:text="@string/hh21" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/hh21"
                                    style="@style/EditTextNum"
                                    android:hint="@string/num"
                                    android:maxLength="2"
                                    android:text='@{hh20a.checked ? hh21.getText().toString : ""}'
                                    app:maxValue="20"
                                    app:minValue="1"
                                    app:type="range" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <LinearLayout
                            style="@style/hlinearlayout"
                            android:layout_gravity="end"
                            android:layout_marginTop="20dp">

                            <Button
                                android:id="@+id/btnEnd"
                                style="@style/buttons_bottom"
                                android:background="@android:color/holo_red_light"
                                android:onClick="@{() -> callback.BtnEnd()}"
                                android:text="@string/end_interview"
                                android:visibility="@{hh18b.checked ? View.VISIBLE : View.GONE}" />
                            <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

                            <Button
                                android:id="@+id/btnNext"
                                style="@style/buttons_bottom"
                                android:background="@android:color/holo_green_light"
                                android:onClick="@{() -> callback.BtnContinue()}"
                                android:text="@string/nextSection"
                                android:visibility="@{hh18a.checked ? View.VISIBLE : View.GONE}" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>