<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tpvics_hh.ui.sections.SectionAActivity" />
    </data>

    <ScrollView
        style="@style/i_scrollview"
        android:layoutDirection="rtl"
        android:textDirection="rtl">

        <LinearLayout
            android:id="@+id/fldGrpSectionA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEAD   -->
            <androidx.cardview.widget.CardView style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/textView3Head"
                        android:text="@string/a101a" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CLUSTER CHECK  -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVa101"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/hh02"
                        style="@style/EditTextNum"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="@string/hh02"
                        android:maxLength="6" />

                    <Button
                        android:id="@+id/checkHHBtn1"
                        style="@style/button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg"
                        android:onClick="@{() -> callback.BtnCheckCluster()}"
                        android:text="CHECK"
                        android:textColor="@color/colorPrimaryDark" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/fldGrpSectionA01"
                style="@style/linearlayout_view"
                android:visibility="gone"
                tools:visibility="visible">


                <!-- Province -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--hh03-->
                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/hh03" />


                        <TextView
                            android:id="@+id/hh03"
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/pink_100"
                            android:gravity="center"
                            android:text="@string/hh03"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- District  -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--hh04-->
                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/hh04" />


                        <TextView
                            android:id="@+id/hh04"
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/pink_100"
                            android:gravity="center"
                            android:text="@string/hh04"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- Tehsil  -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--hh05-->
                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/hh05" />


                        <TextView
                            android:id="@+id/hh05"
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/pink_100"
                            android:gravity="center"
                            android:text="@string/hh05"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- Place   -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--hh06-->
                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="@string/hh06" />


                        <TextView
                            android:id="@+id/hh06"
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@color/pink_100"
                            android:gravity="center"
                            android:text="@string/hh06"
                            android:textColor="@color/colorPrimaryDark" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- Cluster Check   -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--hh07-->
                        <TextView
                            style="@style/i_textview"
                            android:text="@string/hh07" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/hh07"
                                style="@style/textInput"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="#-####-###"
                                android:inputType="textCapCharacters"
                                android:textDirection="ltr"
                                app:mask="#-####-###" />

                            <Button
                                android:id="@+id/checkHHBtn2"
                                style="@style/button"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_bg"
                                android:onClick="@{() -> callback.BtnCheckHH()}"
                                android:text="CHECK"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- HouseHold Check   -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!--hh08-->
                        <TextView
                            style="@style/i_textview"
                            android:text="@string/hh08" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/hh08"
                                style="@style/textInput"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:hint="#-####-###"
                                android:inputType="textCapCharacters"
                                android:textDirection="ltr"
                                app:mask="#-####-###" />

                            <Button
                                android:id="@+id/checkHHBtn3"
                                style="@style/button"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/button_bg"
                                android:onClick="@{() -> callback.BtnCheckHH()}"
                                android:text="CHECK"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/fldGrpSectionA02"
                style="@style/linearlayout_view_wt_bound"
                android:visibility="gone"
                tools:visibility="visible">

                <!-- checkHHHeadpresen   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpcih110"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/hhName"
                            style="@style/i_textview"
                            android:padding="10dp"
                            android:text="@string/checkHHpresent"
                            android:textAlignment="center" />

                        <CheckBox
                            android:id="@+id/checkHHHeadpresent"
                            style="@style/checkbox"
                            android:tag="-1"
                            android:text="@string/checkHHpresent" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- newHHheadname   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpcih110a"
                    style="@style/cardView"
                    android:visibility='@{checkHHHeadpresent.checked? View.GONE : View.VISIBLE}'>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/newHHheadname" />

                        <EditText
                            android:id="@+id/newHHheadname"
                            style="@style/EditTextAlpha"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/name"
                            android:maxLength="25"
                            android:text='@{checkHHHeadpresent.checked ? "" : newHHheadname.getText().toString()}' />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <!-- hh13a  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa109"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="@string/hh13a" />

                        <EditText
                            android:id="@+id/hh13a"
                            style="@style/EditTextAlphaNmeric"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/name" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- hh13b  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa110"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/hh13b" />

                        <EditText
                            android:id="@+id/hh13b"
                            style="@style/EditTextAlphaNmeric"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/contactnum" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- hh14  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVa111"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/i_textview"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/hh14" />

                        <EditText
                            android:id="@+id/hh14"
                            style="@style/EditTextAlphaNmeric"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:hint="@string/year" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- c101  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVc101"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/i_textview"
                            android:text="@string/c101" />

                        <TextView
                            style="@style/i_textviewhint"
                            android:text="@string/c101a" />

                        <RadioGroup
                            android:id="@+id/c101a"
                            style="@style/radiogroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/c101aa"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/c101aa" />

                            <RadioButton
                                android:id="@+id/c101ab"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/c101ab" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:visibility="@{c101ab.checked ? View.VISIBLE : View.GONE}" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:visibility="@{c101aa.checked ? View.VISIBLE : View.GONE}" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>