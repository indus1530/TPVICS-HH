            </androidx.cardview.widget.CardView>


            <!-- ec17  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec17"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec17"
                            android:text="@string/ec17" />

                        <TextView
                            android:id="@+id/q_ec17"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec17"
                            android:layout_alignBottom="@id/qtxt_ec17"
                            android:gravity="center"
                            android:text="@string/Q_ec17" />

                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/ec17"
                        style="@style/EditTextNum"
                        android:hint="@string/year"
                        android:maxLength="2"
                        app:maxValue="99"
                        app:minValue="17"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- ec18  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec18"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec18"
                            android:text="@string/ec18" />

                        <TextView
                            android:id="@+id/q_ec18"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec18"
                            android:layout_alignBottom="@id/qtxt_ec18"
                            android:gravity="center"
                            android:text="@string/Q_ec18" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/ec18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ec181"
                            style="@style/radiobutton"
                            android:text="@string/ec181" />

                        <RadioButton
                            android:id="@+id/ec182"
                            style="@style/radiobutton"
                            android:text="@string/ec182" />

                        <RadioButton
                            android:id="@+id/ec183"
                            style="@style/radiobutton"
                            android:text="@string/ec183" />

                        <RadioButton
                            android:id="@+id/ec184"
                            style="@style/radiobutton"
                            android:text="@string/ec184" />

                        <RadioButton
                            android:id="@+id/ec1898"
                            style="@style/radiobutton"
                            android:text="@string/ec1898" />

                        <EditText
                            android:id="@+id/ec1898x"
                            style="@style/EditTextAlpha"
                            android:enabled='@{ec1898.checked ? true : false}'
                            android:hint="@string/ec1898"
                            android:tag="ec1898"
                            android:text='@{ec1898.checked? ec1898x.getText().toString() : ""}' />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec19  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec19"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec19"
                            android:text="@string/ec19" />

                        <TextView
                            android:id="@+id/q_ec19"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec19"
                            android:layout_alignBottom="@id/qtxt_ec19"
                            android:gravity="center"
                            android:text="@string/Q_ec19" />

                    </RelativeLayout>


                    <RadioGroup
                        android:id="@+id/ec19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ec19a"
                            style="@style/radiobutton"
                            android:enabled="false"
                            android:text="@string/ec19a" />

                        <RadioButton
                            android:id="@+id/ec19b"
                            style="@style/radiobutton"
                            android:checked="true"
                            android:enabled="false"
                            android:text="@string/ec19b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec21  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec21"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
