                            android:layout_alignBottom="@id/qtxt_ec15"
                            android:text="@string/Q_ec15" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/ec15"
                        style="@style/hradiogroup">

                        <RadioButton
                            android:id="@+id/ec151"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/ec151" />

                        <RadioButton
                            android:id="@+id/ec152"
                            style="@style/radiobutton"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/ec152" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec16  Input   -->
            <androidx.cardview.widget.CardView
