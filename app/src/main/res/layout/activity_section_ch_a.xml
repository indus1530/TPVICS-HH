<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tpvics_hh.ui.sections.SectionCHAActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fldGrpSectionCHA"
            style="@style/linearlayout_view_wt_bound">


            <!-- ec16  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec16"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec16"
                            android:text="@string/ec16" />

                        <TextView
                            android:id="@+id/q_ec16"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec16"
                            android:layout_alignBottom="@id/qtxt_ec16"
                            android:gravity="center"
                            android:text="@string/Q_ec16" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/ec16a"
                        style="@style/EditTextAlpha" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- ec17  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec17"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec17"
                            android:text="@string/ec17" />

                        <TextView
                            android:id="@+id/q_ec17"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec17"
                            android:layout_alignBottom="@id/qtxt_ec17"
                            android:gravity="center"
                            android:text="@string/Q_ec17" />

                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/ec17"
                        style="@style/EditTextNum"
                        android:hint="@string/year"
                        android:maxLength="2"
                        app:maxValue="99"
                        app:minValue="17"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- ec18  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec18"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec18"
                            android:text="@string/ec18" />

                        <TextView
                            android:id="@+id/q_ec18"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec18"
                            android:layout_alignBottom="@id/qtxt_ec18"
                            android:gravity="center"
                            android:text="@string/Q_ec18" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/ec18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ec181"
                            style="@style/radiobutton"
                            android:text="@string/ec181" />

                        <RadioButton
                            android:id="@+id/ec182"
                            style="@style/radiobutton"
                            android:text="@string/ec182" />

                        <RadioButton
                            android:id="@+id/ec1898"
                            style="@style/radiobutton"
                            android:text="@string/ec1898" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec19  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec19"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec19"
                            android:text="@string/ec19" />

                        <TextView
                            android:id="@+id/q_ec19"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec19"
                            android:layout_alignBottom="@id/qtxt_ec19"
                            android:gravity="center"
                            android:text="@string/Q_ec19" />

                    </RelativeLayout>


                    <RadioGroup
                        android:id="@+id/ec19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ec19a"
                            style="@style/radiobutton"
                            android:text="@string/ec19a" />

                        <RadioButton
                            android:id="@+id/ec19b"
                            style="@style/radiobutton"
                            android:text="@string/ec19b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec21  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec21"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_ec21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_ec21"
                            android:text="@string/ec19" />

                        <TextView
                            android:id="@+id/q_ec21"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_ec21"
                            android:layout_alignBottom="@id/qtxt_ec21"
                            android:gravity="center"
                            android:text="@string/Q_ec21" />

                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/ec21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/ec21a"
                            style="@style/radiobutton"
                            android:text="@string/ec21a" />

                        <RadioButton
                            android:id="@+id/ec20b"
                            style="@style/radiobutton"
                            android:text="@string/ec20b" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ec20b_title  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVec20b_title"
                style="@style/cardView">

                <LinearLayout style="@style/vlinearlayout">

                    <TextView
                        style="@style/info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ec20b_title" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!--ENDBUTTON linearlayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="start"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btnEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@color/grayOverlay"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:visibility="@{ec20b.checked ? View.VISIBLE : View.GONE}" />

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@color/colorPrimary"
                    android:drawableEnd="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:visibility="@{ec21a.checked ? View.VISIBLE : View.GONE}" />


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>