                    <RadioGroup
                        android:id="@+id/o101"
                        style="@style/radiogroup">

                        <RadioButton
                            android:id="@+id/o101a"
                            style="@style/radiobutton"
                            android:text="@string/o101a" />

                        <TextView
                            style="@style/i_textviewhint"
                            android:text="@string/o101b_title"
                            android:textAlignment="center" />

                        <RadioButton
                            android:id="@+id/o101b"
                            style="@style/radiobutton"
                            android:text="@string/o101b" />


