<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="edu.aku.ramshasaeed.mnch.activities.RsdMain">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.ramshasaeed.mnch.activities.RsdMain" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                style="@style/textViewCenterGravity"
                android:text="@string/routineone" />-->

            <Button
                android:id="@+id/form01"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint01"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form02"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint02"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form03"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint03"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form04"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint04"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form05"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint05"
                android:textSize="20dp" />

            <Button
                android:id="@+id/form06"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:onClick="openForm"
                android:text="@string/rshint06"
                android:textSize="20dp" />


            <!--

                        <Button
                            android:id="@+id/form07"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:onClick="openForm"
                            android:text="@string/rshint07"
                            android:textSize="20dp" />
            -->


            <LinearLayout
                android:id="@+id/fldGrpbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="32dp">

                <Button
                    android:id="@+id/btn_End"
                    style="@style/buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Save Partially"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#1ed61e"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>