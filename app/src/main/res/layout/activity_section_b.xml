<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.tpvics_hh.ui.sections.SectionBActivity" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/fldGrpSectionD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fldGrpSectionD01"
                style="@style/linearlayout_view_wt_bound">

                <LinearLayout
                    android:id="@+id/fldGrpCVd101"
                    style="@style/linearlayout_view"
                    android:orientation="horizontal">

                    <!-- d101Text  TextView   -->
                    <androidx.cardview.widget.CardView
                        style="@style/cardView"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/ch01" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- ch01Number  TextView   -->
                    <androidx.cardview.widget.CardView
                        style="@style/cardView"
                        android:layout_width="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/ch01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pink_100"
                                android:gravity="center"
                                android:text="@string/num"
                                android:textColor="@color/colorPrimaryDark" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- ch02  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch02"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch02" />

                        <EditText
                            android:id="@+id/ch02"
                            style="@style/textInputName"
                            android:hint="@string/ch02" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ch03  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch03"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch03" />

                        <EditText
                            android:id="@+id/ch03"
                            style="@style/textInputName"
                            android:hint="@string/ch03" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ch03b  Input   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch03b"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch03b" />

                        <EditText
                            android:id="@+id/ch03b"
                            style="@style/textInputName"
                            android:hint="@string/ch03b" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ch04  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch04"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch04" />

                        <RadioGroup
                            android:id="@+id/ch04"
                            style="@style/radiogroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/ch04a"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/ch04a" />

                            <RadioButton
                                android:id="@+id/ch04b"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/ch04b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ch05  (d/m/y)Title   -->
                <androidx.cardview.widget.CardView style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtcih2dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text='@string/ch05' />

                        <LinearLayout
                            android:id="@+id/fldGrpCVch05"
                            style="@style/linearlayout_view_wt_bound"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textView3Head"
                                    android:text="@string/ch05c" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/ch05c"
                                    style="@style/textInput"
                                    android:digits="0123456789"
                                    android:hint="@string/ch05c"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:textColor="@android:color/black"
                                    app:defaultValue="00"
                                    app:maxValue="2020"
                                    app:minValue="2015"
                                    app:type="range" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textView3Head"
                                    android:text="@string/ch05b" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/ch05b"
                                    style="@style/textInput"
                                    android:hint="@string/ch05b"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:textColor="@android:color/black"
                                    app:defaultValue="00"
                                    app:maxValue="12"
                                    app:minValue="1"
                                    app:type="range" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/textView3Head"
                                    android:text="@string/ch05a" />

                                <com.edittextpicker.aliazaz.EditTextPicker
                                    android:id="@+id/ch05a"
                                    style="@style/textInput"
                                    android:hint="@string/ch05a"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:textColor="@android:color/black"
                                    app:defaultValue="00"
                                    app:maxValue="31"
                                    app:minValue="1"
                                    app:type="range" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- ch06  (age)Title   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch06"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch06" />

                        <LinearLayout
                            style="@style/linearlayout_view_wt_bound"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/year" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/ch06"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:enabled="false"
                                android:hint="@string/year"
                                android:maxLength="2"
                                app:maxValue="5"
                                app:minValue="0"
                                app:type="range" />

                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/month" />

                            <com.edittextpicker.aliazaz.EditTextPicker
                                android:id="@+id/ch06a"
                                style="@style/EditTextNum"
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:enabled="false"
                                android:hint="@string/month"
                                android:maxLength="2"
                                app:defaultValue="00"
                                app:maxValue="11"
                                app:minValue="1"
                                app:type="range" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ch07  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch07"
                    style="@style/cardView"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch07" />

                        <RadioGroup
                            android:id="@+id/ch07"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RadioButton
                                android:id="@+id/ch07a"
                                style="@style/radiobutton"
                                android:text="@string/ch07a" />

                            <RadioButton
                                android:id="@+id/ch07b"
                                style="@style/radiobutton"
                                android:text="@string/ch07b" />

                            <RadioButton
                                android:id="@+id/ch07c"
                                style="@style/radiobutton"
                                android:text="@string/ch07c" />

                            <RadioButton
                                android:id="@+id/ch0796"
                                style="@style/radiobutton"
                                android:text="@string/ch0796" />
                        </RadioGroup>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- ch08  Radio   -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/fldGrpCVch08"
                    style="@style/cardView">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ch08" />

                        <RadioGroup
                            android:id="@+id/ch08"
                            style="@style/radiogroup"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/ch08a"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/ch08a" />

                            <RadioButton
                                android:id="@+id/ch08b"
                                style="@style/radiobutton"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:text="@string/ch08b" />

                        </RadioGroup>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnEnd"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_red_light"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="@string/end_interview"
                    android:visibility="gone" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->

                <Button
                    android:id="@+id/btnNext"
                    style="@style/buttons_bottom"
                    android:background="@android:color/holo_green_light"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="@string/nextSection" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</layout>