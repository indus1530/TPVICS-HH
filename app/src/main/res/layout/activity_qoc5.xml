                                android:layout_height="55dp"
                                android:background="@color/white"
                                android:gravity="center"
                                android:text="@string/nap"
                                android:textColor="@color/black" />

                        </LinearLayout>


                        <RadioGroup
                            android:id="@+id/qe0501a"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:padding="5sp">

                            <RadioButton
                                android:id="@+id/qe0501aa"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp" />

                            <RadioButton
                                android:id="@+id/qe0501ab"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp" />

                            <RadioButton
                                android:id="@+id/qe0501a97"
                                android:layout_width="wrap_content"
                                android:layout_height="55dp" />

                        </RadioGroup>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility='@{qe0501ab.checked ? View.VISIBLE : View.GONE }'>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@color/colorPrimary"
                            android:text="@string/inr"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/qe0501b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:text='@{qe0501aa.checked ?  "" : qe0501b.getText.toString }' />

