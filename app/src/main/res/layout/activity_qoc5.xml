                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:background="@color/white"
                                android:gravity="center"
                                android:text="@string/yes"
                                android:textColor="@color/black" />

                            <TextView
