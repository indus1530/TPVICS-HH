<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:spinnerStyle">@style/spinner</item>
        <!--
                      Customize your theme here. -->
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>

        <item name="android:actionBarStyle">@style/topBarStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="checkboxStyle">@style/checkbox</item>
        <item name="android:buttonStyle">@style/button</item>
        <item name="android:textColorHint">@color/grayOverlay</item>
        <item name="android:typeface">sans</item>
        <item name="android:fillAfter">true</item>
        <item name="android:enterFadeDuration">600</item>
        <item name="android:exitFadeDuration">200</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:animateLayoutChanges">false</item>
    </style>

    <style name="buttons_bottom">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BackgroundStyle" parent="android:Widget.ScrollView">
        <item name="android:background">@drawable/app_bg_gray</item>
        <item name="android:padding">18dp</item>
    </style>

    <style name="ii_scrollview">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="EditTextAlpha" parent="@style/textInput">
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
