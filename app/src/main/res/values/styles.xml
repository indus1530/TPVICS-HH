<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <item name="spinnerStyle">@style/spinner</item>
        <item name="toolbarStyle">@style/ActionBar</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <style name="spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_style</item>
        <!--<item name="android:spinnerItemStyle">@style/SpinnerItem</item>-->
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">#993399</item>
        <item name="android:background">@drawable/spinner_rectangle</item>
    </style>

    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:paddingTop">22dp</item>


    </style>

    <style name="radiobutton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">4dp</item>
    </style>


    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:background">#e4e4e4e4</item>
        <item name="android:padding">10dp</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="cardView">
        <item name="android:background">@color/dullWhileOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="linerlayout_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="textViewstartAlignGravity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">10dp</item>

    </style>


    <style name="textViewCenterGravity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="h_textview">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">10dp</item>

    </style>

    <!--Button View Start-->
    <style name="button">
        <item name="android:background">@drawable/curve_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">25sp</item>
    </style>
    <!--Button View End-->

    <style name="MyTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Irfan Scrollview  -->
    <style name="i_scrollview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5sp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fillViewport">true</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:paddingLeft">5sp</item>
        <item name="android:paddingRight">5sp</item>
        <item name="android:paddingBottom">5sp</item>
    </style>

    <style name="i_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:drawable">@drawable/textview_background_grad</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">15dp</item>
        <item name="android:elevation">1dp</item>
    </style>

    <!--  Editextview address or name -->
    <style name="textInputName">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:padding">5dp</item>
        <item name="android:radius">2dp</item>
    </style>

    <!-- Irfan RadioGroup  -->
    <style name="i_radiogroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Irfan RadioButton  -->
    <style name="i_radiobutton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">22sp</item>

    </style>

    <style name="EditTextAlphaNumeric">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz
            ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789
        </item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:digits">abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>
